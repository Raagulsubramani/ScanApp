<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HintTextAppearance">
        <item name="android:textSize">12sp</item> <!-- Smaller hint size -->
        <item name="android:textColorHint">@color/gray</item>
    </style>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


    <style name="CustomSwitchStyle">
        <item name="android:switchMinWidth">40dp</item>  <!-- Reduced from 44dp -->
        <item name="android:switchPadding">4dp</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
         <!-- Added to position thumb better within track -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

</resources>



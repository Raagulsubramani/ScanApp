<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_190sdp"
    android:background="@drawable/two_corners"
    android:layout_marginHorizontal="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_divider"
            android:layout_height="wrap_content"/>

        <!-- Title Bar with Sign Out text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/sign_out"
            android:textColor="#F44336"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="@color/border" />

        <!-- Confirmation Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/signout_message"
            android:textColor="@color/card_color"
            android:textSize="16sp" />

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:backgroundTint="#757575"
                app:cornerRadius="24dp" />

            <!-- Sign Out Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_out"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:text="@string/yes_sign_out"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:backgroundTint="#2196F3"
                app:cornerRadius="24dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
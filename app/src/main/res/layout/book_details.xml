<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- AppBar (Fixed at Top) -->
    <include
        android:id="@+id/includeAppBar"
        layout="@layout/layout_details_appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/includeAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Card for Profile Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/bookprofileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/bookCoverImageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:contentDescription="@string/book_cover"
                        android:clickable="true"
                        android:focusable="true"
                        />

                    <!-- ProgressBar for loading -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_centerInParent="true" />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Details Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detailsSection"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/bookprofileCard">

                <TextView

                    android:id="@+id/detailsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/details"
                    android:textColor="@color/card_color"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/addFieldButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addFieldButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="@string/add_new_field"
                    android:textColor="@color/primary"
                    app:icon="@drawable/add_new_field"
                    app:iconTint="@color/primary"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ISBN Field -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/isbnCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/detailsSection">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/isbn_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/isbn_label"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <EditText
                        android:id="@+id/isbnEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:autofillHints=""
                        android:background="@null"
                        android:textStyle="bold"
                        android:inputType="text"
                        android:hint="@string/enter_isbn"
                        app:layout_constraintEnd_toStartOf="@id/editName"
                        app:layout_constraintStart_toEndOf="@id/isbn_label"
                        app:layout_constraintTop_toTopOf="parent"
                        android:theme="@style/HintTextAppearance"/>

                    <ImageButton
                        android:id="@+id/editName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_isbn"
                        android:src="@drawable/edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Book Name Field -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/booknameCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/isbnCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/booknamelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bookname_label"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <EditText
                        android:id="@+id/bookTitleEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:autofillHints="name"
                        android:background="@null"
                        android:textStyle="bold"
                        android:inputType="text"
                        android:hint="@string/enter_bookname"
                        app:layout_constraintEnd_toStartOf="@id/editbookname"
                        app:layout_constraintStart_toEndOf="@id/booknamelabel"
                        app:layout_constraintTop_toTopOf="parent"
                        android:theme="@style/HintTextAppearance"/>

                    <ImageButton
                        android:id="@+id/editbookname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_bookname"
                        android:src="@drawable/edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Author Field -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/authorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/booknameCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/authorLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/author_label"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <EditText
                        android:id="@+id/authorEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:autofillHints=""
                        android:background="@null"
                        android:textStyle="bold"
                        android:inputType="text"
                        android:hint="@string/enter_author"
                        app:layout_constraintEnd_toStartOf="@id/editauthor"
                        app:layout_constraintStart_toEndOf="@id/authorLabel"
                        app:layout_constraintTop_toTopOf="parent"
                        android:theme="@style/HintTextAppearance"/>

                    <ImageButton
                        android:id="@+id/editauthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_author"
                        android:src="@drawable/edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Publish Field -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/publishCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/authorCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/publishLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_label"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <EditText
                        android:id="@+id/publishDateEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:autofillHints=""
                        android:background="@null"
                        android:textStyle="bold"
                        android:inputType="text"
                        android:hint="@string/enter_publish_year"
                        app:layout_constraintEnd_toStartOf="@id/editpublish"
                        app:layout_constraintStart_toEndOf="@id/publishLabel"
                        app:layout_constraintTop_toTopOf="parent"
                        android:theme="@style/HintTextAppearance"
                        tools:ignore="TextFields" />

                    <ImageButton
                        android:id="@+id/editpublish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_publish"
                        android:src="@drawable/edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Number of pages Field -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/numberofpageCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/publishCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/numberofpage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/numberofpage_label"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <EditText
                        android:id="@+id/pagesEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:autofillHints="number"
                        android:inputType="number"
                        android:background="@null"
                        android:textStyle="bold"
                        android:hint="@string/enter_pages"
                        android:scrollHorizontally="false"
                        app:layout_constraintEnd_toStartOf="@id/editpages"
                        app:layout_constraintStart_toEndOf="@id/numberofpage"
                        app:layout_constraintTop_toTopOf="parent"
                        android:theme="@style/HintTextAppearance"/>

                    <ImageButton
                        android:id="@+id/editpages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_pages"
                        android:src="@drawable/edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Subject Field -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/subjectCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:layout_constraintTop_toBottomOf="@id/numberofpageCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject_label"
                        android:textColor="@color/primary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <EditText
                        android:id="@+id/subjectEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:background="@null"
                        android:textStyle="bold"
                        android:hint="@string/enter_subject"
                        android:scrollHorizontally="false"
                        android:inputType="text"
                        android:autofillHints="name"
                        app:layout_constraintEnd_toStartOf="@id/editsubject"
                        app:layout_constraintStart_toEndOf="@id/subject"
                        app:layout_constraintTop_toTopOf="parent"
                        android:theme="@style/HintTextAppearance"/>

                    <ImageButton
                        android:id="@+id/editsubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_subject"
                        android:src="@drawable/edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Export Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/exportButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/export"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/subjectCard"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragements.ProfileFragment">

    <!-- Top Blue Background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_135sdp"
        android:background="@drawable/ic_profilebackground">

        <!-- Header with Back Button and Centered Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back Button -->
<!--            <ImageButton-->
<!--                android:id="@+id/btnBack"-->
<!--                android:layout_width="48dp"-->
<!--                android:layout_height="48dp"-->
<!--                android:src="@drawable/ic_back_white"-->
<!--                android:padding="12dp"-->
<!--                android:visibility="visible"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                android:contentDescription="@string/back"/>-->

            <!-- Title - Centered -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:paddingTop="@dimen/_8sdp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </RelativeLayout>


    <!-- Profile Picture Container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp">

        <!-- Profile Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_width="@dimen/_4sdp"
            app:civ_border_color="@color/profile_icon_color"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user_profile"
            android:scaleType="centerCrop"/>

        <ProgressBar
            android:id="@+id/imageProgress"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/_20sdp"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <!-- Edit Icon - Refined positioning to overlap profile image border -->
        <ImageView
            android:id="@+id/edit_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:visibility="invisible"
            android:layout_alignEnd="@id/profile_picture"
            android:layout_alignBottom="@id/profile_picture"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edit_background"
            android:padding="6dp"
            android:src="@drawable/ic_editt"
            app:tint="@color/white" />
    </RelativeLayout>


    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <!-- Profile Options List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Personal Info -->
        <LinearLayout
            android:id="@+id/personal_info_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user_profile"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/Personal_info"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"/>
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/settings_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_setting"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"/>
        </LinearLayout>

        <!-- Language -->
        <LinearLayout
            android:id="@+id/language_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lang"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/language"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/english_us"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginVertical="16dp"/>


        <!-- Contact Us -->
        <LinearLayout
            android:id="@+id/contact_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_contact"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"/>
        </LinearLayout>

        <!-- About GM Scan -->
        <LinearLayout
            android:id="@+id/about_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_about"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/about_gmscan"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Sign Out Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:paddingStart="24dp"
        android:gravity="center"
        android:text="@string/sign_out"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:icon="@drawable/ic_logout"
        app:iconTint="@color/red"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:backgroundTint="@color/light_red"
        app:cornerRadius="30dp"
        tools:ignore="RtlSymmetry" />
</LinearLayout>
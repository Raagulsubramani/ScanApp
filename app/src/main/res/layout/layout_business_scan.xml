<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BusinessScanActivity">

    <!-- AppBar (Fixed at Top) -->
    <include
        android:id="@+id/includeAppBar"
        layout="@layout/layout_details_appbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scrollable Content Below AppBar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/includeAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:background="@drawable/rounded_edittext"
                android:id="@+id/fullInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/edittext_padding"
                android:hint="@string/ocr_text_hint"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/bnameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="@string/enter_bname"
                android:textSize="16sp"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:inputType="textPersonName"
                android:importantForAutofill="yes"
                android:autofillHints="name"/>

            <EditText
                android:id="@+id/jobtitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="Designation"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edittext"
                android:importantForAutofill="yes"
                android:autofillHints="jobTitle"
                android:inputType="text"
                tools:ignore="HardcodedText"/>

            <EditText
                android:id="@+id/companynameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:hint="@string/enter_companyname"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="yes"
                android:autofillHints="organizationName"
                android:inputType="text"
                android:background="@drawable/rounded_edittext" />

            <EditText
                android:id="@+id/numberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:hint="@string/enter_phone"
                android:inputType="phone"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="yes"
                android:autofillHints="phone"
                android:background="@drawable/rounded_edittext" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:hint="@string/enter_email"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="yes"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_edittext" />

            <EditText
                android:id="@+id/websiteEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:hint="@string/website_hint"
                android:inputType="textUri"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="yes"
                android:autofillHints="url"
                android:background="@drawable/rounded_edittext" />

            <EditText
                android:id="@+id/baddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@color/card_color"
                android:textColorHint="@color/card_color"
                android:hint="@string/enter_address"
                android:inputType="textPostalAddress"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:importantForAutofill="yes"
                android:autofillHints="postalAddress"
                android:background="@drawable/rounded_edittext" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

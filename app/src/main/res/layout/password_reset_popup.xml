<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="400dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- User profile success icon from drawable -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile"
            android:adjustViewBounds="true"
            android:layout_marginBottom="16dp"
            android:contentDescription="Success Icon"/>

        <!-- Success message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_reset_successfully"
            android:textColor="#2196F3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_password_reset_successfully"
            android:textColor="#757575"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"/>

        <!-- Go to Sign In button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoToSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Go to Sign In"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
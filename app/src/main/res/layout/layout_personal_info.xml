<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Back Button and Centered Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:padding="12dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"/>

        <!-- Title - Centered -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Personal_info"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/card_color"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Profile Image Container -->
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="110dp"
            android:layout_height="131dp"
            android:contentDescription="@string/profile"
            android:src="@drawable/user_profile" />


        <ProgressBar
            android:id="@+id/imageProgress"
            android:layout_width="@dimen/_20sdp"
            android:visibility="invisible"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center" />

        <!-- Edit Profile Button -->
        <ImageButton
            android:id="@+id/btnEditProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/edit_background"
            android:contentDescription="@string/Edit_profile_picture"
            android:padding="12dp"
            android:src="@drawable/ic_editt" />
    </FrameLayout>

    <!-- Personal Info Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <!-- First Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:textColor="@color/blue"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/card_color"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/editFirstNameBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_edit_pencil"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit_first_name"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="20dp"/>

        <!-- Last Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/last_name"
                    android:textColor="@color/blue"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/editLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/card_color"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textPersonName"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/editLastNameBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_edit_pencil"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit_last_name"/>
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp"/>

        <!-- Email Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_id"
                    android:textColor="@color/blue"
                    android:textSize="12sp"/>

                <EditText
                    android:enabled="false"
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/card_color"
                    android:textSize="16sp"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <ImageButton
                android:clickable="false"
                android:focusable="false"
                android:id="@+id/editEmailBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_edit_pencil"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit_email_address"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp"/>

        <!-- Phone Number Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textColor="@color/blue"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Country Code Picker -->
                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:ccp_showNameCode="false"
                        app:ccp_showFlag="true"
                        app:ccp_autoFormatNumber="true"
                        app:ccp_showArrow="true"
                        app:ccp_textSize="16sp"
                        app:ccp_arrowSize="16sp"
                        app:ccp_showFullName="false"
                        app:ccp_showPhoneCode="true"
                        app:ccpDialog_background="@color/two_corners_bg"
                        app:ccpDialog_textColor="@color/card_color"
                        app:ccp_contentColor="@color/card_color"
                        android:layout_marginEnd="8dp"
                       tools:ignore="MissingClass" />

                    <!-- Phone Number EditText -->
                    <EditText
                        android:id="@+id/editPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="13"
                        android:inputType="phone"
                        android:textColor="@color/card_color"
                        android:textSize="16sp"
                        android:background="@null"/>

                    <!-- Edit Phone Number Button -->
                    <ImageButton
                        android:id="@+id/editPhoneNumberBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_edit_pencil"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/edit_phone_number"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/save"
        android:textColor="@color/bg"
        android:layout_marginTop="24dp"
        app:cornerRadius="20dp"
        android:backgroundTint="@color/blue"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
</LinearLayout>